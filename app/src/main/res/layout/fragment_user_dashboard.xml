            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/general_padding"
                android:text="Contact No"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/contact_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/general_padding"
                android:textSize="@dimen/sub_title_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@android:color/black"
                android:padding="@dimen/general_padding"
                android:textSize="@dimen/sub_title_content" />

            <TextView
                android:id="@+id/address_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/general_padding"
                android:textSize="@dimen/sub_title_content" />

            <TextView
                android:id="@+id/user_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/general_padding"
                android:text="@string/backup_message"
                android:textColor="@android:color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/backup_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/template_msg"
                android:padding="@dimen/general_padding"
                android:textSize="@dimen/sub_title_content" />

            <Button
                android:id="@+id/call_backup"
                android:layout_width="match_parent"
